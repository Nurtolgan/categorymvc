@model Category

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
         <div class="row pb-2">
         <h2 class="text-primary">Delete</h2>
         <hr />
         </div>
@*         <div asp-validation-summary="All"></div>*@
         <div class="mb-3">
            <input asp-for="Name" class="form-control" readonly/>
         </div>
        <div class="mb-3">
            <input asp-for="DisplayOrder" class="form-control" readonly/>
        </div>
        <div class="mb-3">
            <input asp-for="CreatedDateTime" class="form-control" readonly/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a class="btn btn-secondary" asp-area="" asp-controller="Category" asp-action="Index" style="width:150px">Назад</a>

     </div>
</form>